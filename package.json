{
  "name": "web",
  "version": "1.0.0",
  "description": "AvyFx admin panel and AvyWeb avalanche center websites",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation --inspect\" next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap && pnpm prettify",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types && pnpm prettify",
    "ii": "pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "eslint": "cross-env NODE_OPTIONS=--no-deprecation eslint .",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "eslint:fix": "cross-env NODE_OPTIONS=--no-deprecation eslint --fix",
    "tsc": "tsc",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "prettify": "cross-env NODE_OPTIONS=--no-deprecation prettier --write .",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "seed": "./seed.sh",
    "seed:standalone": "payload run ./src/scripts/standalone-seed.ts",
    "reseed": "./reseed.sh",
    "bootstrap": "./bootstrap.sh",
    "sanitize": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/scripts/sanitize-db.ts",
    "sync-blobs": "cross-env NODE_OPTIONS=--no-deprecation tsx ./src/scripts/sync-blob-storage.ts",
    "sync-blobs:debug": "cross-env NODE_OPTIONS='--no-deprecation --inspect-brk' tsx ./src/scripts/sync-blob-storage.ts",
    "update-media-prefix": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/scripts/update-media-prefix.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "payload migrate",
    "email:build": "email build",
    "email:dev": "email dev --dir ./src/emails --port 3001",
    "email:export": "email export"
  },
  "lint-staged": {
    "**/*": "pnpm run prettify"
  },
